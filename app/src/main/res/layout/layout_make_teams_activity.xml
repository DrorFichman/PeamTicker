<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F7FA"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextColor="@android:color/white" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:clipChildren="false"
                android:clipToPadding="false">

                <include
                    android:id="@+id/score_display_container"
                    layout="@layout/score_display_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <!-- Screenshot Area Container (includes teams + weather for sharing) -->
                <LinearLayout
                    android:id="@+id/screenshot_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F5F7FA"
                    android:orientation="vertical">

                    <!-- Teams Container -->
                    <LinearLayout
                        android:id="@+id/teams_list_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:minHeight="300dp"
                        android:padding="5dp">

                        <!-- Team 1 Card -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/team1_card"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="6dp"
                            android:layout_weight="1"
                            android:minHeight="300dp"
                            app:cardBackgroundColor="#E8F0FE"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <include
                                    android:id="@+id/analysis_headers_1"
                                    layout="@layout/player_team_analysis_item"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:visibility="gone" />

                                <!-- Team 1 Players Panel -->
                                <LinearLayout
                                    android:id="@+id/panel1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <com.teampicker.drorfichman.teampicker.View.NonScrollingListView
                                        android:id="@+id/team_1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:clipToPadding="false"
                                        android:divider="@null"
                                        android:padding="4dp" />
                                </LinearLayout>

                                <!-- Team 1 Stats Footer -->
                                <TextView
                                    android:id="@+id/team1_public_stats"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#E3F2FD"
                                    android:gravity="center"
                                    android:padding="6dp"
                                    android:textColor="#1565C0"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Team 2 Card -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/team2_card"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:minHeight="300dp"
                            app:cardBackgroundColor="#FFF3E0"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <include
                                    android:id="@+id/analysis_headers_2"
                                    layout="@layout/player_team_analysis_item"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:visibility="gone" />

                                <!-- Team 2 Players Panel -->
                                <LinearLayout
                                    android:id="@+id/panel2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <com.teampicker.drorfichman.teampicker.View.NonScrollingListView
                                        android:id="@+id/team_2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:clipToPadding="false"
                                        android:divider="@null"
                                        android:padding="4dp" />
                                </LinearLayout>

                                <!-- Team 2 Stats Footer -->
                                <TextView
                                    android:id="@+id/team2_public_stats"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#FFE0B2"
                                    android:gravity="center"
                                    android:padding="6dp"
                                    android:textColor="#E65100"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Calculating Progress Overlay -->
                        <LinearLayout
                            android:id="@+id/calculating_teams_progress"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#E6000000"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="32dp"
                            android:visibility="gone">

                            <!-- Progress Title -->
                            <TextView
                                android:id="@+id/calculating_teams_progress_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="24dp"
                                android:text="@string/optimizing_teams"
                                android:textColor="@android:color/white"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <!-- Material Progress Indicator -->
                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/progress_indicator"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="16dp"
                                android:max="100"
                                android:progress="0"
                                app:indicatorColor="#E65100"
                                app:trackColor="#455A64"
                                app:trackCornerRadius="4dp"
                                app:trackThickness="8dp" />

                            <!-- Progress Percentage -->
                            <TextView
                                android:id="@+id/calculating_teams_progress_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:textColor="@android:color/white"
                                android:textSize="32sp"
                                android:textStyle="bold" />

                            <!-- Best Score So Far -->
                            <TextView
                                android:id="@+id/calculating_teams_progress_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:textColor="#B0BEC5"
                                android:textSize="14sp"
                                android:visibility="invisible" />

                        </LinearLayout>
                    </LinearLayout>

                    <!-- Bench Area -->
                    <LinearLayout
                        android:id="@+id/players_bench"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#ECEFF1"
                            android:orientation="horizontal"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="@string/teams_bench_title"
                                android:textColor="#455A64"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/panel_bench"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_bench_panel"
                            android:minHeight="80dp"
                            android:orientation="vertical">

                            <com.teampicker.drorfichman.teampicker.View.NonScrollingListView
                                android:id="@+id/players_bench_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clipToPadding="false"
                                android:divider="@null"
                                android:padding="8dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Weather Display -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:id="@+id/weather_display"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_weather_card"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/weather_emoji"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:text="ðŸŒ¤ï¸"
                                android:textSize="22sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/weather_temperature"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Loading..."
                                    android:textColor="#1565C0"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/weather_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textColor="#546E7A"
                                        android:textSize="11sp"
                                        android:visibility="gone" />

                                    <TextView
                                        android:id="@+id/weather_time_range"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="4dp"
                                        android:text="(14:00-17:00)"
                                        android:textColor="#546E7A"
                                        android:textSize="11sp"
                                        android:visibility="gone" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <!-- End Screenshot Area Container -->

                <!-- Prediction Header -->
                <LinearLayout
                    android:id="@+id/prediction_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp">

                    <!-- Team 1 Prediction Percentage -->
                    <TextView
                        android:id="@+id/prediction_team1_percent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="50%"
                        android:textColor="#1565C0"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <!-- Prediction Info Button -->
                    <Button
                        android:id="@+id/prediction_info_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:gravity="center"
                        android:minWidth="0dp"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:text="@string/prediction_label"
                        android:textAllCaps="false"
                        android:textColor="#546E7A"
                        android:textSize="14sp" />

                    <!-- Team 2 Prediction Percentage -->
                    <TextView
                        android:id="@+id/prediction_team2_percent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="50%"
                        android:textColor="#E65100"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Internal Stats Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:id="@+id/internal_stats_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_stats_card"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/total_list1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:textColor="#1565C0"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="4dp"
                            android:background="#E0E0E0" />

                        <TextView
                            android:id="@+id/total_headlines"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="#37474F"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="4dp"
                            android:background="#E0E0E0" />

                        <TextView
                            android:id="@+id/total_list2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:textColor="#E65100"
                            android:textSize="12sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Modern Action Buttons -->
                <LinearLayout
                    android:id="@+id/buttons_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:gravity="center">

                    <!-- Shuffle Button -->
                    <LinearLayout
                        android:id="@+id/shuffle_views"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="3dp">

                            <Button
                                android:id="@+id/shuffle"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_action_button"
                                android:drawableTop="@drawable/ic_action_shuffle"
                                android:drawablePadding="2dp"
                                android:gravity="center"
                                android:minHeight="64dp"
                                android:paddingHorizontal="4dp"
                                android:paddingVertical="8dp"
                                android:text="@string/shuffle_grade"
                                android:textAllCaps="false"
                                android:textColor="#1976D2"
                                android:textSize="10sp" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="28dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="4dp"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp">

                            <Button
                                android:id="@+id/shuffle_options"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackground"
                                android:drawableStart="@drawable/ic_action_more"
                                android:gravity="center"
                                android:minHeight="64dp"
                                android:paddingStart="4dp" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <!-- Move Button -->
                    <LinearLayout
                        android:id="@+id/move_views"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="4dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="3dp">

                            <Button
                                android:id="@+id/move"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_action_button"
                                android:drawableTop="@drawable/ic_action_swap"
                                android:drawablePadding="2dp"
                                android:gravity="center"
                                android:minHeight="64dp"
                                android:paddingHorizontal="4dp"
                                android:paddingVertical="8dp"
                                android:text="@string/move_players"
                                android:textAllCaps="false"
                                android:textColor="#7B1FA2"
                                android:textSize="10sp" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="28dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="4dp"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp">

                            <Button
                                android:id="@+id/move_options"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackground"
                                android:drawableStart="@drawable/ic_action_more"
                                android:gravity="center"
                                android:minHeight="64dp"
                                android:paddingStart="4dp" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <!-- Save Button -->
                    <LinearLayout
                        android:id="@+id/save_views"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp">

                            <Button
                                android:id="@+id/save_results"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_action_button_primary"
                                android:drawableTop="@drawable/ic_action_save"
                                android:drawablePadding="2dp"
                                android:gravity="center"
                                android:minHeight="64dp"
                                android:paddingHorizontal="4dp"
                                android:paddingVertical="8dp"
                                android:text="@string/action_enter_results"
                                android:textAllCaps="false"
                                android:textColor="@android:color/white"
                                android:textSize="10sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <!-- Confetti overlay - renders on top of all content -->
    <nl.dionsegijn.konfetti.xml.KonfettiView
        android:id="@+id/konfetti_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:focusable="false" />

</FrameLayout>
