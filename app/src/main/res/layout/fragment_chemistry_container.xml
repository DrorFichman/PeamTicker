<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/chemistry_tab_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:background="@drawable/tab_bar_with_top_border">

        <RadioButton
            android:id="@+id/tab_chemistry_pairs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="@dimen/chart_pill_min_height"
            android:button="@null"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/chemistry_tab_pairs"
            android:textSize="13sp"
            android:textColor="@color/charts_tab_text_color"
            android:background="@drawable/charts_tab_pill_background_ripple"
            android:layout_marginEnd="4dp"
            android:checked="true" />

        <RadioButton
            android:id="@+id/tab_chemistry_triplets"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="@dimen/chart_pill_min_height"
            android:button="@null"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/chemistry_tab_triplets"
            android:textSize="13sp"
            android:textColor="@color/charts_tab_text_color"
            android:background="@drawable/charts_tab_pill_background_ripple"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <RadioButton
            android:id="@+id/tab_chemistry_form"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="@dimen/chart_pill_min_height"
            android:button="@null"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/chemistry_tab_form"
            android:textSize="13sp"
            android:textColor="@color/charts_tab_text_color"
            android:background="@drawable/charts_tab_pill_background_ripple"
            android:layout_marginStart="4dp" />

    </RadioGroup>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/chemistry_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
