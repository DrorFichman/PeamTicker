<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:paddingHorizontal="8dp">

        <!-- Team 1 Score -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/team1_minus"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:minWidth="36dp"
                android:minHeight="36dp"
                android:text="−"
                android:textSize="20sp"
                android:padding="0dp"
                android:textColor="#546E7A"
                android:theme="@style/Theme.MaterialComponents.Light"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="8dp"
                app:strokeColor="#CFD8DC"
                app:strokeWidth="1dp" />

            <TextView
                android:id="@+id/team1_score_display"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#1A237E" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/team1_plus"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:minWidth="36dp"
                android:minHeight="36dp"
                android:text="+"
                android:textSize="20sp"
                android:padding="0dp"
                android:textColor="#546E7A"
                android:theme="@style/Theme.MaterialComponents.Light"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="8dp"
                app:strokeColor="#CFD8DC"
                app:strokeWidth="1dp" />

        </LinearLayout>

        <!-- Center Controls (VS label + Date + Prediction Reveal) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VS"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#90A4AE"
                android:letterSpacing="0.1"
                android:layout_marginBottom="4dp" />

            <!-- Date Button -->
            <Button
                android:id="@+id/set_game_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/fui_transparent"
                android:drawableTop="@drawable/button_date"
                android:onClick="showDatePicker"
                android:padding="4dp" />

            <!-- Reveal Prediction Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/reveal_prediction_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:minWidth="0dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="2dp"
                android:text="@string/prediction_label"
                android:textAllCaps="false"
                android:textColor="#7B1FA2"
                android:textSize="11sp"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_prediction"
                app:iconPadding="4dp"
                app:iconSize="14dp"
                app:iconTint="#7B1FA2"
                app:strokeColor="#CE93D8"
                app:strokeWidth="1dp" />

        </LinearLayout>

        <!-- Team 2 Score -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/team2_minus"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:minWidth="36dp"
                android:minHeight="36dp"
                android:text="−"
                android:textSize="20sp"
                android:padding="0dp"
                android:textColor="#546E7A"
                android:theme="@style/Theme.MaterialComponents.Light"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="8dp"
                app:strokeColor="#CFD8DC"
                app:strokeWidth="1dp" />

            <TextView
                android:id="@+id/team2_score_display"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#BF360C" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/team2_plus"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:minWidth="36dp"
                android:minHeight="36dp"
                android:text="+"
                android:textSize="20sp"
                android:padding="0dp"
                android:textColor="#546E7A"
                android:theme="@style/Theme.MaterialComponents.Light"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="8dp"
                app:strokeColor="#CFD8DC"
                app:strokeWidth="1dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
