<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:layoutDirection="ltr">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/edit_player_grade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:hint="@string/grade"
            android:inputType="number" />

        <Button
            android:id="@+id/edit_player_birthday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:onClick="showDatePicker"
            android:text="@string/age" />

        <EditText
            android:id="@+id/edit_player_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@android:color/transparent"
            android:gravity="right|center"
            android:hint="@string/name"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <CheckBox
            android:id="@+id/player_is_gk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GK" />

        <CheckBox
            android:id="@+id/player_is_defender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Defender" />

        <CheckBox
            android:id="@+id/player_is_playmaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Playmaker" />

        <CheckBox
            android:id="@+id/player_is_unbreaking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unbreakable" />
    </LinearLayout>


    <TextView
        android:id="@+id/player_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/player_results_summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/player_participation_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:src="@drawable/collaboration" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableEnd="@drawable/back"
            android:text="Back"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableEnd="@drawable/save_small"
            android:text="@string/save"
            android:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>
