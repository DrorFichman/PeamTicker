<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F7FA"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextColor="@android:color/white" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Screenshot Area Container (includes teams + weather for sharing) -->
                <LinearLayout
                    android:id="@+id/screenshot_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F5F7FA"
                    android:orientation="vertical">

                    <!-- Teams Container -->
                    <LinearLayout
                        android:id="@+id/teams_list_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:minHeight="300dp"
                        android:orientation="horizontal">

                        <!-- Team 1 Card (Blue) -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/team1_card"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="3dp"
                            android:layout_weight="1"
                            android:minHeight="300dp"
                            app:cardBackgroundColor="#E8F0FE"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="3dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <!-- Team 1 Players Panel -->
                                <LinearLayout
                                    android:id="@+id/panel1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <com.teampicker.drorfichman.teampicker.View.NonScrollingListView
                                        android:id="@+id/team_1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:clipToPadding="false"
                                        android:divider="@null"
                                        android:padding="3dp" />
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Team 2 Card (Orange) -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/team2_card"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="3dp"
                            android:layout_marginEnd="3dp"
                            android:layout_weight="1"
                            android:minHeight="300dp"
                            app:cardBackgroundColor="#FFF3E0"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="3dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <!-- Team 2 Players Panel -->
                                <LinearLayout
                                    android:id="@+id/panel2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <com.teampicker.drorfichman.teampicker.View.NonScrollingListView
                                        android:id="@+id/team_2"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:clipToPadding="false"
                                        android:divider="@null"
                                        android:padding="3dp" />
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Team 3 Card (Green) -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/team3_card"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="3dp"
                            android:layout_weight="1"
                            android:minHeight="300dp"
                            app:cardBackgroundColor="#E8F5E9"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="3dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <!-- Team 3 Players Panel -->
                                <LinearLayout
                                    android:id="@+id/panel3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <com.teampicker.drorfichman.teampicker.View.NonScrollingListView
                                        android:id="@+id/team_3"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:clipToPadding="false"
                                        android:divider="@null"
                                        android:padding="3dp" />
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!-- Weather Display -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:id="@+id/weather_display"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_weather_card"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/weather_emoji"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:text="ðŸŒ¤ï¸"
                                android:textSize="22sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/weather_temperature"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Loading..."
                                    android:textColor="#1565C0"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/weather_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textColor="#546E7A"
                                        android:textSize="11sp"
                                        android:visibility="gone" />

                                    <TextView
                                        android:id="@+id/weather_time_range"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="4dp"
                                        android:text="(14:00-17:00)"
                                        android:textColor="#546E7A"
                                        android:textSize="11sp"
                                        android:visibility="gone" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <!-- End Screenshot Area Container -->

                <!-- Internal Stats Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:id="@+id/internal_stats_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_stats_card"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/total_list1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="#1565C0"
                            android:textSize="11sp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="2dp"
                            android:background="#E0E0E0" />

                        <TextView
                            android:id="@+id/total_list2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="#E65100"
                            android:textSize="11sp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="2dp"
                            android:background="#E0E0E0" />

                        <TextView
                            android:id="@+id/total_list3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="#2E7D32"
                            android:textSize="11sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Modern Action Buttons -->
                <LinearLayout
                    android:id="@+id/buttons_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:gravity="center">

                    <!-- Shuffle Button -->
                    <LinearLayout
                        android:id="@+id/shuffle_views"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="3dp">

                            <Button
                                android:id="@+id/shuffle"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_action_button"
                                android:drawableTop="@drawable/ic_action_shuffle"
                                android:drawablePadding="2dp"
                                android:gravity="center"
                                android:minHeight="64dp"
                                android:paddingHorizontal="4dp"
                                android:paddingVertical="8dp"
                                android:text="@string/shuffle_grade"
                                android:textAllCaps="false"
                                android:textColor="#1976D2"
                                android:textSize="10sp" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="28dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="4dp"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp">

                            <Button
                                android:id="@+id/shuffle_options"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackground"
                                android:drawableStart="@drawable/ic_action_more"
                                android:gravity="center"
                                android:minHeight="64dp"
                                android:paddingStart="4dp" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <!-- Move Button -->
                    <LinearLayout
                        android:id="@+id/move_views"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="3dp">

                            <Button
                                android:id="@+id/move"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_action_button"
                                android:drawableTop="@drawable/ic_action_swap"
                                android:drawablePadding="2dp"
                                android:gravity="center"
                                android:minHeight="64dp"
                                android:paddingHorizontal="4dp"
                                android:paddingVertical="8dp"
                                android:text="@string/move_players"
                                android:textAllCaps="false"
                                android:textColor="#7B1FA2"
                                android:textSize="10sp" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</FrameLayout>

