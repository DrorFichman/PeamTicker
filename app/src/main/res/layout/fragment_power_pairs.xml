<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="48dp">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/pairs_title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <!-- Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/pairs_description"
        android:textSize="13sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="8dp" />

    <!-- All / Recent toggle -->
    <RadioGroup
        android:id="@+id/pairs_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <RadioButton
            android:id="@+id/pairs_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chemistry_toggle_all"
            android:checked="true"
            android:paddingStart="4dp"
            android:paddingEnd="12dp" />

        <RadioButton
            android:id="@+id/pairs_recent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chemistry_toggle_recent"
            android:paddingStart="4dp"
            android:paddingEnd="4dp" />
    </RadioGroup>

    <!-- Column headers -->
    <LinearLayout
        android:id="@+id/pairs_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/pairs_col_pair"
            android:textStyle="bold"
            android:textSize="13sp" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/pairs_col_games"
            android:textStyle="bold"
            android:textSize="13sp" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/pairs_col_winrate"
            android:textStyle="bold"
            android:textSize="13sp" />
    </LinearLayout>

    <!-- Pairs list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pairs_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone" />

    <!-- Empty State -->
    <TextView
        android:id="@+id/pairs_empty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="15sp"
        android:padding="32dp"
        android:visibility="gone" />

</LinearLayout>
