<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <!-- Header Row -->
    <include
        android:id="@+id/player_titles"
        layout="@layout/player_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <View
        android:id="@+id/header_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/player_titles"
        android:background="#E0E0E0" />

    <ListView
        android:id="@+id/players_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_divider"
        android:clipToPadding="false"
        android:divider="#E0E0E0"
        android:dividerHeight="1dp"
        android:paddingBottom="100dp" />

    <!-- Empty State View -->
    <LinearLayout
        android:id="@+id/empty_state_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_divider"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/player"
            android:alpha="0.4"
            android:contentDescription="@string/empty_players_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/empty_players_title"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="16dp"
            android:text="@string/empty_players_message"
            android:textColor="#666666"
            android:textSize="15sp"
            android:gravity="center"
            android:lineSpacingExtra="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/empty_state_paste_button"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:text="@string/empty_players_paste_button"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:cornerRadius="24dp"
            app:icon="@drawable/paste"
            app:iconPadding="8dp"
            app:iconTint="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/empty_players_or_add"
            android:textColor="#999999"
            android:textSize="13sp"
            android:gravity="center" />

    </LinearLayout>

    <!-- Make Teams FAB -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_make_teams"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="24dp"
        android:elevation="6dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp"
        android:text="@string/make_teams"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:cornerRadius="28dp"
        app:icon="@drawable/make_teams_icon"
        app:iconPadding="8dp"
        app:iconTint="@android:color/white" />

    <!-- Exit Pasted Players Mode Button (Save) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/exit_pasted_mode"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#4CAF50"
        android:elevation="6dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp"
        android:text="@string/done"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:cornerRadius="28dp"
        app:icon="@drawable/done"
        app:iconPadding="8dp"
        app:iconTint="@android:color/white" />

    <!-- Cancel Pasted Players Mode Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancel_pasted_mode"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/exit_pasted_mode"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#757575"
        android:elevation="6dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp"
        android:text="@string/cancel"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:cornerRadius="28dp" />

</RelativeLayout>
