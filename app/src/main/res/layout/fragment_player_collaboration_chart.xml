<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="48dp">

    <!-- Chart Title -->
    <TextView
        android:id="@+id/collaboration_chart_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/insights_collaboration_title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Selected player info panel -->
    <LinearLayout
        android:id="@+id/collaboration_info_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:paddingHorizontal="16dp"
        android:background="#F5F5F5"
        android:visibility="invisible">

        <TextView
            android:id="@+id/collaboration_selected_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/collaboration_selected_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textSize="14sp"
            android:textColor="#555555"
            android:minLines="2" />

    </LinearLayout>

    <!-- Chart container with Y-axis label -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Scatter Chart -->
        <com.github.mikephil.charting.charts.ScatterChart
            android:id="@+id/collaboration_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Y-axis label (rotated, overlaid on left side) -->
        <TextView
            android:id="@+id/collaboration_y_axis_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginBottom="30dp"
            android:rotation="-90"
            android:text="@string/team_collaboration_y_axis_label"
            android:textSize="12sp"
            android:textColor="#444444"
            android:maxLines="1" />

    </FrameLayout>

    <!-- Empty State Message -->
    <TextView
        android:id="@+id/collaboration_empty_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="16sp"
        android:visibility="gone"
        android:padding="32dp" />

</LinearLayout>
