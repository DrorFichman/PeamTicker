<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="48dp">

    <!-- Chart Title -->
    <TextView
        android:id="@+id/chart_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/stats_seniority_chart_title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Description -->
    <TextView
        android:id="@+id/chart_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/stats_seniority_chart_description"
        android:textSize="13sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="8dp" />

    <!-- Summary Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/summary_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:visibility="gone"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#E8F5E9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <!-- Icon -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¥"
                android:textSize="24sp"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_seniority_current_avg"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/current_avg_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_dark" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Info Panel for selected point -->
    <LinearLayout
        android:id="@+id/info_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:minHeight="140dp"
        android:background="#F5F5F5">

        <!-- Click hint (shown before selection) -->
        <TextView
            android:id="@+id/click_hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/stats_seniority_click_hint"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:visibility="visible" />

        <!-- Selected date header -->
        <TextView
            android:id="@+id/selected_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <!-- 3-column layout for player lists -->
        <LinearLayout
            android:id="@+id/player_columns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <!-- New Players Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="4dp">

                <TextView
                    android:id="@+id/new_players_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_seniority_new_players"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:gravity="center"
                    android:layout_marginBottom="4dp" />

                <ScrollView
                    android:id="@+id/new_players_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:scrollbars="vertical"
                    android:fadeScrollbars="false">

                    <TextView
                        android:id="@+id/new_players_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:gravity="center"
                        android:lineSpacingExtra="2dp" />
                </ScrollView>
            </LinearLayout>

            <!-- Returning Players Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="4dp"
                android:paddingEnd="4dp">

                <TextView
                    android:id="@+id/returning_players_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_seniority_returning_players"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:gravity="center"
                    android:layout_marginBottom="4dp" />

                <ScrollView
                    android:id="@+id/returning_players_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:scrollbars="vertical"
                    android:fadeScrollbars="false">

                    <TextView
                        android:id="@+id/returning_players_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:gravity="center"
                        android:lineSpacingExtra="2dp" />
                </ScrollView>
            </LinearLayout>

            <!-- Regulars Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="4dp">

                <TextView
                    android:id="@+id/regulars_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_seniority_regulars"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FF9800"
                    android:gravity="center"
                    android:layout_marginBottom="4dp" />

                <ScrollView
                    android:id="@+id/regulars_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:scrollbars="vertical"
                    android:fadeScrollbars="false">

                    <TextView
                        android:id="@+id/regulars_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:gravity="center"
                        android:lineSpacingExtra="2dp" />
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Chart Container -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/seniority_chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Empty State Message -->
    <TextView
        android:id="@+id/empty_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="16sp"
        android:visibility="gone"
        android:padding="32dp" />

</LinearLayout>

