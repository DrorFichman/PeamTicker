<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="16dp">

    <!-- Chart Title -->
    <TextView
        android:id="@+id/chart_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/stats_success_heatmap_title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <!-- Description -->
    <TextView
        android:id="@+id/chart_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/stats_success_heatmap_description"
        android:textSize="13sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="8dp" />

    <!-- Player count selector -->
    <LinearLayout
        android:id="@+id/player_count_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stats_success_show_players"
            android:textSize="14sp"
            android:layout_marginEnd="8dp" />

        <Spinner
            android:id="@+id/player_count_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="80dp" />

    </LinearLayout>

    <!-- Info Panel for selected point -->
    <LinearLayout
        android:id="@+id/info_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="6dp"
        android:visibility="invisible"
        android:background="#F5F5F5">

        <TextView
            android:id="@+id/selected_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/selected_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/selected_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp" />
    </LinearLayout>

    <!-- Chart Container -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/success_chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Custom Legend with clickable player names (fixed height, scrollable) -->
    <ScrollView
        android:id="@+id/legend_scroll"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:layout_marginTop="4dp"
        android:fillViewport="false">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/custom_legend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            app:chipSpacingHorizontal="2dp"
            app:chipSpacingVertical="2dp"
            app:singleLine="false" />

    </ScrollView>

    <!-- Empty State Message -->
    <TextView
        android:id="@+id/empty_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="16sp"
        android:visibility="gone"
        android:padding="32dp" />

</LinearLayout>
